{
  "manifest_version": 3,
  "name": "Bolio",
  "version": "0.1.0",
  "description": "A universal voice-to-text browser extension.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}